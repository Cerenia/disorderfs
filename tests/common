trap "Unmount 2>/dev/null" EXIT

Mount () {
	while getopts "s" opt; do
		case $opt in
			s) src="$OPTARG";;
		esac
	done
	if [ -z "$src" ];
		then src=fixtures/;
		else src="${src}/";
	fi
	Unmount
	mkdir -p target
	../disorderfs -q "${@}" "$src" target/
}

Unmount () {
	fusermount -q -z -u target/ && rm -rf target/
}

Get_entries () {
	find target -type f -printf %f
}

Fail () {
	echo "E: ${*}"
	exit 1
}

Expect () {
	ENTRIES="$(Get_entries)"
	EXPECTED="${1}"

	if [ "${ENTRIES}" != "${EXPECTED}" ]
	then
		Fail "saw ${ENTRIES}, expected ${EXPECTED}"
	fi
}
